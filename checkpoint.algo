ALGORITHM read-phrase
VAR
    ch:STRING
    i:INTEGER
    nb:INTEGER
    c:CHAR

BEGIN
write("enter the phrase")
   read(ch);
   nb:=length(ch);
   i:=0;
   FOR i FROM 1  TO length(ch) step  DO
IF ( C +'.') THEN
nb:=nb+1;
    
END_IF
i:=i+1;
   END_FOR
FOR i FROM 0 TO length(ch) STEP step  DO
   IF ((c='a')or(c='e')or(c='o')or(c='i')or(c='u')or(c='y')) THEN
   nb:=nb+1;
   read(c);
   END_IF
END_FOR
END